<!-- This is where most of the handlebars code goes -->
<!-- Validates we have a successful connection to our server -->
{{!-- <p>Connected to our server</p> --}}
<div class="container">
    <div class="row">
        <div class="col-xs-12 text center" id="top-bar">
            <h1>EAT DA BURGER!</h1>
        </div>
        <div class="col-xs-6 text center" class="task">
            <div class="row">
                {{#each burger_data}}
                {{#unless this.devoured}}
                <div class="col-xs-9 text center">
                    <pre>{{this.id}}. {{this.burger_name}}</pre>
                </div>
                <div class="col-xs-3 text-center">
                    <form method="POST" action="/burgers/update?_method=PUT" class="button-size">
                        <input type="hidden" name="id" type="text" values="{{this.id}}">
                        <br>
                        <button type="submit" class="btn btn-default">
                            DEVOUR IT!
                        </button>
                    </form>
                </div>
                {{/unless}}
                {{/each}}
            </div>
            {{!-- This is where we move the data we devour --}}
        </div>
        <div class="col-xs-6 text-center" class="task" {{#each burger_data}} {{#if this.devoured}} <input
            class="form-control" type+"text" placeholder="{{this.id}}. {{this.burger_name}}" readonly>
            {{/if}}
            {{/each}}
        </div>
    </div>
</div>
{{!-- This is where we add data to the db --}}
<div class="container">
    <div class="row">
        <div class="col-xs-12 text-center enter_section">
            <form action="/burgers/create" method="POST">
                <input type="text" name="burger_name" class="form-control" value="" id="enter_text">
                <button type="submit" class="btn btn-primary" id="text-enter-button">
                    SUBMIT
                </button>
            </form>
            <p>Please choose a burger you would like eat!</p>
        </div>
    </div>

</div>